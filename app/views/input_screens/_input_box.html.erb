<div class="row my-2">
  <% label = @input_items.where(:identifier => name).first.label %>
  <% if label != "" %>
    <div class="col-5 text-end">
      <%= label %>
    </div>
  <% end %>
  <div class="<%= label != '' ? 'col-6' : 'col-11' %>">
    <div class="row border border-dark rounded">
      <div class="col-1 text-end p-0 text-secondary"><%= @input_items.where(:identifier => name).first.value_label %></div>
      <div class="col-11">
        <input class="decision-input numeric-input synced-input w-100 <%= @decisions.where(:field_name => name).first&.field_value == @decisions.where(:field_name => name).first&.original_value ? "original-decision-value" : "" %>" type="text" data-min-value="<%= @input_items.where(:identifier => name).first.min_value %>" data-max-value="<%= @input_items.where(:identifier => name).first.max_value %>" name="<%= name %>" id="<%= name %>" value="<%= @decisions.where(:field_name => name).first&.field_value %>" data-original-value="<%= @decisions.where(:field_name => name).first&.original_value %>" data-input-screen-id="<%= @input_screen.id %>" data-decimal-places="<%= @input_items.where(:identifier => name).first&.number_of_decimal_places %>">
      </div>
    </div>
  </div>
  <div class="col-1 text-start p-1 m-0">
    <% unless @input_items.where(:identifier => name).first.infolink.nil? %>
      <a tabindex="-1" href="/info_link_pdfs/<%= @input_items.where(:identifier => name).first.infolink %>" target="_blank">
        <div class="info-icon">
          <%= fa_icon "info-circle" %>
        </div>
      </a>
    <% end %>
  </div>

</div>