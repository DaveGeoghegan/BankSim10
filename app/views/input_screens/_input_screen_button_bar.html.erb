<div class="row mb-3">
  <% current_team.rounds.each do |round| %>

    <div class="col-2">
      <button class="btn btn-sm btn-primary w-100 <%= round.is_active? ? "" : "disabled" %>" type="button"><span class="text-white">Round <%= round.round_number %></span></button>
    </div>
  <% end %>
  <div class="col-4 text-end">

    <select>
      <option value="Related Reports" class="text-italic"><i>Related Reports</i></option>
      <% input_screen.related_reports.each do |report| %>
        <option value="<%= report.name %>"><%= report.name %></option>
      <% end %>
    </select>
  </div>
</div>